    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "base_gui.main",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/libs/PygameWidgets/"
            }
        },
        {
            "name": "Routing Simulator",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/routing/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/routing"
        }
    ]
}
